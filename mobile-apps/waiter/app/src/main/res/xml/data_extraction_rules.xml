<?xml version="1.0" encoding="utf-8"?><!--
   Data extraction rules for Waiter App (Android 12+)
   This ensures preferences persist across device reboots
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include SharedPreferences for cloud backup -->
        <include domain="sharedpref" path="waiter_preferences.xml"/>
        <include domain="sharedpref" path="server_config.xml"/>
    </cloud-backup>

    <device-transfer>
        <!-- Include preferences when transferring to a new device -->
        <include domain="sharedpref" path="waiter_preferences.xml"/>
        <include domain="sharedpref" path="server_config.xml"/>
    </device-transfer>
</data-extraction-rules>