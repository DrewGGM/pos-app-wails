<?xml version="1.0" encoding="utf-8"?><!--
   Backup rules for Waiter App
   This ensures that user preferences persist across device reboots
-->
<full-backup-content>
    <!-- Include all SharedPreferences for backup -->
    <include domain="sharedpref" path="waiter_preferences.xml"/>

    <!-- Include server configuration -->
    <include domain="sharedpref" path="server_config.xml"/>
</full-backup-content>