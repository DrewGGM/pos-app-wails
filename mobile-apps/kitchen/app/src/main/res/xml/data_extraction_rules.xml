<?xml version="1.0" encoding="utf-8"?><!--
   Data extraction rules for Kitchen App (Android 12+)
   This ensures preferences are backed up to Google Drive
   and restored when reinstalling the app
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include SharedPreferences for cloud backup -->
        <include domain="sharedpref" path="kitchen_preferences.xml"/>
        <include domain="sharedpref" path="server_config.xml"/>
    </cloud-backup>

    <device-transfer>
        <!-- Include preferences when transferring to a new device -->
        <include domain="sharedpref" path="kitchen_preferences.xml"/>
        <include domain="sharedpref" path="server_config.xml"/>
    </device-transfer>
</data-extraction-rules>